<Window x:Class="WebApi2Book.Windows.Legacy.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Legacy Client" Height="350" Width="525">
    <StackPanel Margin="10">
        <ListBox Height="150" Width="300" ItemsSource="{Binding Categories}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Margin="10,0,0,0" Text="{Binding Description}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Margin="0,5" HorizontalAlignment="Center" Content="Get Categories" Command="{Binding GetCategoriesCommand}"/>
        
        
    </StackPanel>
</Window>
